{
  "name": "rifm",
  "version": "0.2.2",
  "description": "Tiny react input formatter and mask",
  "author": "istarkov",
  "license": "MIT",
  "main": "dist/rifm.cjs.js",
  "module": "dist/rifm.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build:code": "rollup -c",
    "build:flow": "echo \"// @flow\n\nexport * from '../src'\" > dist/rifm.cjs.js.flow",
    "build": "rimraf dist && npm run build:code && npm run build:flow",
    "test": "jest && flow check && eslint ./",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "deploy:docz": "yarn docz:build && cp .docz/dist/index.html .docz/dist/404.html && gh-pages -d .docz/dist",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn test && yarn build"
  },
  "lint-staged": {
    "*.{js,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "flowtype",
      "jsx-a11y"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:flowtype/recommended",
      "plugin:jsx-a11y/recommended"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.51",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "@babel/preset-stage-3": "^7.0.0-beta.51",
    "@material-ui/core": "^1.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.2.0",
    "docz": "^0.5.3",
    "emotion": "^9.2.4",
    "eslint": "^5.0.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "flow-bin": "^0.75.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "libphonenumber-js": "^1.2.15",
    "lint-staged": "^7.2.0",
    "prettier": "^1.10.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-powerplug": "^1.0.0-rc.1",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-size-snapshot": "^0.6.0"
  },
  "peerDependencies": {
    "react": "^16.4.0-0"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.51"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istarkov/rifm.git"
  }
}
